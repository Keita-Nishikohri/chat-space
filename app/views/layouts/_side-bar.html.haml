.chat-side
  .side-header
    %h3.side-header__user-name
      = current_user.name
    %ul.user-menu
      %li.user-menu__edit
        = link_to new_group_path do
          = fa_icon 'pencil-square-o', class: 'icon'
      %li.user-menu__cog
        = link_to edit_user_path(id: current_user) do
          = fa_icon 'cog', class: 'icon'
  .groups
    - current_user.groups.each do |group|
      .group
        = link_to group_messages_path(group) do
          .group__name
            = group.name
          .group__message
